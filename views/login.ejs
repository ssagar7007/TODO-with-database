      <input style="margin-bottom:5px ;" placeholder="password" name="password">
      <% if(error){ %>
      <p style="color: red;font-size: 11px;"> <%= error %> </p> 
      <% } %>
      <input type="submit" value="login">
    </form>

     <h2 style="color: red; font-size: 20px;" id="error"></h2>
  <div id="create-account-wrap">
